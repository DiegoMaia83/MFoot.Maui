<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MFoot.Maui.MainPage">


    <StackLayout>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0" Padding="30">
                <Label Text="1" />
            </StackLayout>

            <StackLayout Grid.Column="1" Padding="30">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                </Grid>

                <StackLayout Grid.Row="0">
                    <Label Text="A" />
                </StackLayout>

                <StackLayout Grid.Row="1">
                    <Label Text="B" />
                </StackLayout>

            </StackLayout>

            <StackLayout Grid.Column="2" Padding="30">
                <Label Text="2" />
            </StackLayout>

        </Grid>

    </StackLayout>

</ContentPage>
